Bootstrap: docker
From: nvidia/cuda:11.5.1-cudnn8-runtime-ubuntu20.04

%post
    export DEBIAN_FRONTEND=noninteractive
    export DEBCONF_NONINTERACTIVE_SEEN=true
    export PYTHONNOUSERSITE=1

    # バックアップ
    # キャッシュを削除
    rm -rf /var/lib/apt/lists/*
    apt-get -y update
    apt-get -y install vim git wget
    apt-get -y install make build-essential libssl-dev zlib1g-dev \
        libbz2-dev libreadline-dev libsqlite3-dev wget curl llvm \
        libncursesw5-dev xz-utils tk-dev libxml2-dev libxmlsec1-dev libffi-dev liblzma-dev

    # install pyenv
    export PYENV_ROOT=/opt/pyenv
    export PATH=$PYENV_ROOT/bin:$PYENV_ROOT/shims:${PATH}
    export PYTHON_VERSION=3.9.12
    git clone https://github.com/pyenv/pyenv.git /opt/pyenv
    pyenv install ${PYTHON_VERSION}
    pyenv global ${PYTHON_VERSION}

    pip install --upgrade --no-cache-dir pip

    # pip --no-cache-dir install torch==1.12.1+cu116 torchvision==0.13.1+cu116 torchaudio==0.12.1 --extra-index-url https://download.pytorch.org/whl/cu116
    pip --no-cache-dir install https://download.pytorch.org/whl/cu115/torch-1.11.0%2Bcu115-cp39-cp39-linux_x86_64.whl
    pip --no-cache-dir install https://download.pytorch.org/whl/cu115/torchvision-0.12.0%2Bcu115-cp39-cp39-linux_x86_64.whl
    pip --no-cache-dir install opencv-python
    pip --no-cache-dir install imageio
    pip --no-cache-dir install matplotlib
    pip --no-cache-dir install scipy==1.9.3
    pip --no-cache-dir install scikit-image
    pip --no-cache-dir install argparse
    pip --no-cache-dir install tensorboardX
    pip --no-cache-dir install blessings
    pip --no-cache-dir install progressbar2
    pip --no-cache-dir install path
    pip --no-cache-dir install tqdm
    pip --no-cache-dir install pypng
    pip --no-cache-dir install open3d==0.15.2
    pip --no-cache-dir install torch-scatter torch-sparse -f https://data.pyg.org/whl/torch-1.11.0+cu115.html

%environment
    # pip install --user でインストールしたものを使わない
    export PYTHONNOUSERSITE=1

    export PYENV_ROOT=/opt/pyenv
    export PATH=$PYENV_ROOT/bin:$PYENV_ROOT/shims:${PATH}
    export PYTHON_VERSION=3.9.12

